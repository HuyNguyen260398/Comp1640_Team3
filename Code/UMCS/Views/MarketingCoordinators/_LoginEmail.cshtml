@model UMCS.Models.Faculty1

<div class="modal-header">
    <h4 style="text-align:center">Login Email</h4>
    <hr />

    <div class="col-md-9 col-sm-9 col-xs-12">
        <div class="hpanel email-compose" style="padding-top:0">
            @*@using (Html.BeginForm("SendEmail", "MarketingCoordinators", FormMethod.Post))
            {*@
                <div class="panel-heading hbuilt">
                    <div class="p-xs">
                        <div class="form-group">
                            <label class="col-lg-1 control-label text-left">Email</label>
                            <div class="col-lg-11 col-md-12 col-sm-12 col-xs-12">
                                @*<input name="email" type="text" class="form-control input-sm" placeholder="example@email.com">*@
